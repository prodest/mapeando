<div class="edit-pin-form">
  <div class="row">

    <form ng-submit="void()">
      <label>
        <span class="info">Você pode <strong>arrastar o ponto no mapa</strong> para qualquer lugar.</span>
        <input ng-model="demand.pin_fullname" type="text" name="search" id="searchTextField" placeholder="aqui o nome da rua, avenida, local etc" />
      </label>

      <span class="edit-pin-action add-point"><a ng-click=""><%= image_tag 'add.png', size: '23x23' %> Criar uma rota</a></span>
      <!--<span class="pin-action undo-point"><%= image_tag 'add.png' %> </span>-->
      
    </form>
  </div>

</div>

<div class="map-data">
  <div id="user-map"></div>
</div>

<div class="form-options">
  <div class="row">
    <div class="medium-6 small-6 columns text-left">
      <a href="#/"  class="reset" ng-click="reset()">Cancelar</a>
    </div>
    <div class="medium-6 small-6 end columns text-right">
      <button class="button save" ng-click="nextStep()" ng-disabled="!(demand.latitude && demand.longitude)">Salvar indicação</button>
    </div>
  </div>
</div>


